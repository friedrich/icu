## Makefile.in for ICU - example/usort/client
## Steven  R. Loomis

srcdir=@srcdir@
top_srcdir=@top_srcdir@

## Build directory information
top_builddir = ../..
subdir = usort/client

include $(top_builddir)/icuapps.mk

## Extra files to remove for 'make clean'
CLEANFILES = *~

## Target information
TARGET = usort

LDFLAGS := -L../lib $(LDFLAGS)

# ICULIBS includes all standard ICU libraries.
# if we wanted only part of the ICU, we could use (for example) just '$(LIBS) -licu-uc -lusort' ...
ICULIBS    += -lusort $(LDFLAGS_TOOLUTIL)

# Want to make sure the usort.h dependency is not on the installed version .. 
CPPFLAGS  := -I../lib $(CPPFLAGS)

OBJECTS = usort_main.o 

DEPS = $(OBJECTS:.o=.d)

## List of phony targets
.PHONY : all all-local install install-local clean clean-local \
distclean distclean-local dist dist-local check check-local

## List of standard targets
all: all-local
install: install-local
clean: clean-local
distclean : distclean-local
dist: dist-local
check: check-local

all-local: $(TARGET)

install-local: all-local install-target


install-target: all-local
	$(MKINSTALLDIRS) $(BINDIR)
	$(INSTALL_PROGRAM) $(TARGET) $(BINDIR)/$(TARGET)

dist-local:

clean-local:
	test -z "$(CLEANFILES)" || rm -f $(CLEANFILES)
	rm -f $(OBJECTS) $(TARGET)

distclean-local: clean-local
	rm -f Makefile $(DEPS)

check-local: $(TARGET)
	$(INVOKE) ./$(TARGET) < Makefile > Makefile-Sorted~

Makefile: $(srcdir)/Makefile.in  $(top_builddir)/config.status
	cd $(top_builddir) \
	 && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status

# ICULIBS includes all standard ICU libraries.
# if we wanted only part of the ICU, we could use (for example) just
#         '$(LIBS) -licu-uc -lusort' ...

$(TARGET) : $(OBJECTS)
	$(LINK.cc) -o $@ $^ $(ICULIBS)





